{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "dse",
    "scopeName": "source.dse",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.dse",
                    "match": "\\s*#.*"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.dse",
                    "match": "(?<![\\w./-])(simulation|model|channel|uses|workflow|as|stack|network|var|arch|file|uid|envar|stepsize|endtime|user|token|stacked|sequential|path|external)(?![\\w./-])",
                    "scope": "keyword.control"
                }
            ]
        }
    }
}
